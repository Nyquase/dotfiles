[module/volume]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = ÔÄ® %percentage%%
format-volume-underline = #fff

label-muted = ÔÄ¶ %percentage%%
label-muted-foreground = #666
format-muted-underline = #666

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
sink = alsa_output.pci-0000_00_1f.3.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = false

; Interval for volume increase/decrease (in percent points)
; Default: 5
interval = 5

; This was used when the polybar volume module wasn't working
[module/volume-display]
type = custom/script
exec = /home/nyquase/.config/scripts/get_volume.sh
tail = true

format = <label>
label = %output%%
format-prefix="ÔÄ® "
format-underline = #ffffff

scroll-up = amixer -q sset Master 5%+ && kill -USR1 %pid%
scroll-down = amixer -q sset Master 5%- && kill -USR1 %pid%
click-left = amixer -q sset Master 100%- && kill -USR1 %pid%
click-right = kill -USR1 %pid%
